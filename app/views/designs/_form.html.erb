<%= form_with model: design, local: true do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title, value: design.title %>
    </div>
    <div>
        <%= form.label :description %>
        <%= form.text_area :description, value: design.description %>
    </div>
    <div>
        <%= form.label :collection_id %>
        <%= form.select(:collection_id, options_for_select(collections.map{|c| [c.title, c.id]}, design.collection_id)) %>
    </div>
    <div>
        <%= form.label :picture %> <%= form.file_field :picture, accept:
        'image/png,image/gif,image/jpeg,image/jpg' %>
    </div>
    <div>
        <%= form.submit %>
    </div>
<% end %>