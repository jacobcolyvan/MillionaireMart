<h1><%= @collection.title %></h1>
<p><%= @collection.description %></p>
<br>

<ul>
  <% for design in @designs %>
    <li class="card">
      <%= link_to "#{design.title}", desi_path(design.id) %>
      <%= image_tag design.picture if design.picture.attached? %>
      
      <% if current_user && current_user.id == design.user_id %>
        <%= link_to "Edit", edit_des_path(design.id) %>
      <% end %>
      <%# link to design page %>
    </li>
  <% end %>
</ul>
<br>

<%# add design %>
<% if current_user %> 
  <%= link_to "Add design", new_des_path %>
  <% if current_user.id == @collection.user_id %>
    <%= link_to "Edit collection", edit_collection_path%>
  <% end %>
<% end %>

<%= link_to "Return to collections", collections_path%>